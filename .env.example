# Environment
FLASK_APP=app
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-in-production

# Database
DATABASE_URL=postgresql://hcs:hcs@localhost:5432/hcs

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# GitLab (example)
GITLAB_URL=https://gitlab.example.com
GITLAB_TOKEN=your-access-token
GITLAB_PROJECT_ID=123

# Telegram Notifications
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Email Notifications (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=
SMTP_TO=admin@example.com

# Alert Thresholds
ALERT_SCORE_THRESHOLD=80

# Ansible Remote Execution
# Options: local (default), awx, ssh
ANSIBLE_EXECUTOR_TYPE=local

# AWX/Ansible Tower (when ANSIBLE_EXECUTOR_TYPE=awx)
AWX_URL=https://awx.example.com
AWX_TOKEN=
AWX_PROJECT_ID=
AWX_INVENTORY_ID=

# SSH to Ansible Control Node (when ANSIBLE_EXECUTOR_TYPE=ssh)
ANSIBLE_HOST=
ANSIBLE_USER=ansible
ANSIBLE_KEY_FILE=
ANSIBLE_PLAYBOOK_DIR=/tmp/hcs_playbooks
ANSIBLE_INVENTORY=/etc/ansible/hosts
